+static void
+on_extensions_listed (GObject *source_object,
+                      GAsyncResult *res,
+                      gpointer user_data)
+{
+  CcMultitaskingPanel *self = user_data;
+  g_autoptr (GError) error = NULL;
+  g_autoptr (GVariant) response = NULL;
+  g_autoptr (GVariant) extensions = NULL;
+  GVariantIter iter;
+  GVariant *value;
+  const char *uuid;
+
+  response = g_dbus_proxy_call_finish (G_DBUS_PROXY (source_object), res, &error);
+
+  if (error)
+    {
+      if (!g_error_matches (error, G_IO_ERROR, G_IO_ERROR_CANCELLED))
+        g_warning ("Failed to get gnome-shell extensions: %s", error->message);
+      return;
+    }
+
+  extensions = g_variant_get_child_value (response, 0);
+
+  double overview_ext_state = SHELL_EXTENSION_STATE_UNINSTALLED;
+
+  g_variant_iter_init (&iter, extensions);
+  while (g_variant_iter_loop (&iter, "{&s@a{sv}}", &uuid, &value))
+    {
+      g_autoptr (GVariantDict) info = NULL;
+
+      if (g_str_equal (uuid, OVERVIEW_EXT_UUID))
+        {
+          info = g_variant_dict_new (value);
+          g_variant_dict_lookup (info, "state", "d", &overview_ext_state);
+        }
+    }
+
+  update_extension_widgets (ADW_VIEW_STACK_PAGE (self->workspaces_stack_page),
+                            GTK_WIDGET (self->vertical_layout_radio),
+                            GTK_WIDGET (self->horizontal_layout_radio),
+                            OVERVIEW_EXT_UUID, overview_ext_state);
+
+  update_panel_visibilty (self);
+}
