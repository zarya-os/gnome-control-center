+static void
+update_extension_widgets (GtkWidget  *extension_stack_page,
+                          GtkWidget  *extension_enable_radio,
+                          GtkWidget  *extension_disable_radio,
+                          const char *uuid,
+                          int         extension_state)
+{
+  enum {
+    STATE_ENABLED = 1,
+    STATE_DISABLED,
+    STATE_ERROR,
+    STATE_OUT_OF_DATE,
+    STATE_DOWNLOADING,
+    STATE_INITIALIZED,
+    STATE_DISABLING,
+    STATE_ENABLING,
+
+    STATE_UNINSTALLED = SHELL_EXTENSION_STATE_UNINSTALLED,
+  };
+
+  switch (extension_state)
+    {
+      case STATE_ENABLED:
+      case STATE_ENABLING:
+      case STATE_DOWNLOADING:
+        g_debug ("Extension %s is enabled (state %d)", uuid, extension_state);
+        gtk_check_button_set_active (extension_enable_radio, TRUE);
+        break;
+      case STATE_INITIALIZED:
+      case STATE_DISABLED:
+      case STATE_DISABLING:
+        g_debug ("Extension %s is not enabled (state %d)", uuid, extension_state);
+        gtk_check_button_set_active (extension_disable_radio, TRUE);
+        break;
+      case STATE_OUT_OF_DATE:
+      case STATE_UNINSTALLED:
+      case STATE_ERROR:
+        g_warning ("Extension %s is not available or invalid (state %d)", uuid, extension_state);
+        adw_view_stack_page_set_visible (extension_stack_page, FALSE);
+        break;
+      default:
+        g_warning ("Unknown extension state for %s: %d\n", uuid, extension_state);
+    }
+}
